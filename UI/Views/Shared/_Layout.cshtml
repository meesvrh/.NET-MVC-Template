@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> signInManager

<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UI</title>
    <link rel="stylesheet" href="~/css/tailwind.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://unpkg.com/flowbite@1.5.3/dist/flowbite.min.css" />
    <link rel="stylesheet" href="~/UI.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.css" asp-append-version="true" />
</head>
<body class="dark:bg-gray-900 h-screen">
    @if (signInManager.IsSignedIn(User)) {
        <div class="flex">
            <partial name="_SideBar.cshtml" />
            <div class="container dark:text-white">
                @RenderBody()
            </div>
        </div>
    } else {
        <header>
            <partial name="_NavBar.cshtml" />
        </header>
        <div class="container mx-auto dark:text-white">
            @RenderBody()
        </div>
    }

    <footer>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://unpkg.com/flowbite@1.5.3/dist/flowbite.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
