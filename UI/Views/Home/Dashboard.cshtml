@model DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="grid mt-10 gap-3 grid-cols-1 md:grid-cols-3 justify-items-center">
    <div class="block w-80 h-48 rounded-lg border shadow-md hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
        <div class="flex p-3 gap-3 items-center h-full">
            <i class="fas fa-users fa-5x dark:text-blue-600"></i>
            <div>
                <p class="text-2xl font-semibold dark:text-gray-400">Registered Users</p>
                <p class="text-5xl font-semibold underline dark:decoration-blue-600 dark:text-gray-300">@Model.Users.Count()</p>
            </div>
        </div>
    </div>
    <div class="block w-80 h-48 rounded-lg border shadow-md hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
    </div>
    <div class="block w-80 h-48 rounded-lg border shadow-md hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
    </div>
</div>

